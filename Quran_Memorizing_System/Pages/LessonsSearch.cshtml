@page
@model Quran_Memorizing_System.Pages.LessonsSearchModel
@{
}

@section Styles {
        <link rel="stylesheet" href="~/css/lessons.css" asp-append-version="true" />
}

<div class="container row pt-3">

    <!-- Header -->
    <div class="col-12 mb-3 d-flex justify-content-between align-items-center">
        <h4 class="fw-bold">Lessons</h4>
        <!-- Add Lesson Button -->
        <a asp-page="/Add_Lesson" class="btn btn-success px-4">
            <i class="bi bi-plus-circle me-1"></i> Add Lesson
        </a>
    </div>

    <!-- Left: Search + Lessons -->
    <div class="col-lg-8">

        <!-- Search -->
        <form method="get" class="search-wrapper mb-4 d-flex align-items-center">
            <input type="text"
                   name="Search"
                   value="@Model.Search"
                   class="form-control border-0 shadow-0"
                   placeholder="Search lessons">
            <button type="submit" class="btn btn-dark ms-3 px-4">
                <i class="bi bi-search me-1"></i> Search
            </button>
        </form>

        <!-- Lesson cards -->
        @foreach (var lesson in Model.Lessons)
        {
                <div class="lesson-card">
                    <div class="d-flex align-items-start">
                        <div class="lesson-radio"></div>
                        <div>
                            <div class="lesson-label">@lesson.Instructor</div>
                            <div class="lesson-title">@lesson.Title</div>
                            <div class="small fw-semibold">
                                (@string.Join(", ", lesson.Tags))
                            </div>
                        </div>
                    </div>

                    <!-- Action buttons -->
                    <div class="mt-3 d-flex gap-2">
                        <!-- View -->
                        <a asp-page="/ViewLesson"
                           asp-route-id="@lesson.Id"
                           class="btn btn-dark btn-sm">
                            <i class="bi bi-eye"></i> View
                        </a>

                        <!-- Edit -->
                        <a asp-page="/EditLesson"
                           asp-route-id="@lesson.Id"
                           class="btn btn-warning btn-sm text-white">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <!-- Delete -->
                        <form method="post"
                              asp-page-handler="Delete"
                              asp-route-id="@lesson.Id"
                              onsubmit="return confirm('Are you sure you want to delete this lesson?');">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
        }
    </div>

    <!-- Right: Filters -->
    <div class="col-lg-4 mt-4 mt-lg-0">
        <h5 class="filters-title">FILTERS</h5>

        <form class="filters-box">
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="tag1">
                <label class="form-check-label" for="tag1">Tag One</label>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="tag2">
                <label class="form-check-label" for="tag2">Tag Two</label>
            </div>

            <button type="button" class="btn btn-dark watch-btn mt-2">
                Apply
            </button>
        </form>
    </div>

</div>