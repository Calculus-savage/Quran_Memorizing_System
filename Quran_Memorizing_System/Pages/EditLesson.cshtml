@page
@model Quran_Memorizing_System.Pages.EditLessonModel
@{
}

@section Styles {
        <link rel="stylesheet" href="~/css/lessons.css" asp-append-version="true" />
}

<div class="container pt-3">
    <div class="header mb-4">
        <h2>Edit Lesson</h2>
    </div>

    <div class="lesson-card edit-card mx-auto">
        <form method="post">
            <input type="hidden" name="lessonId" value="@Model.Lesson_ID" />

            <div class="lesson-details mb-3">
                <div class="mb-3">
                    <label class="form-label fw-bold">Title</label>
                    <input type="text" name="Title" value="@Model.Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Location</label>
                    <input type="text" name="Location" value="@Model.Location" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Availability</label>
                    <input type="text" name="Availability" value="@Model.Availability" class="form-control" required />
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Lesson URL</label>
                    <input type="url" name="lesson_url" value="@Model.LessonUrl" class="form-control" required />
                </div>
            </div>

            <div class="lesson-actions d-flex justify-content-end">
                <button type="submit" class="btn btn-warning me-2">
                    <i class="bi bi-save me-1"></i> Save Changes
                </button>
                <a href="/LessonsSearch" class="btn btn-dark">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

