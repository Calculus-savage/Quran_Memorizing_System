@page
@model Quran_Memorizing_System.Pages.all_performanceModel
@{
	@using System.Data
}


<p class="text-center fs-4 mb-3">All Performance</p>

@for (int i = 0; i < Model.submission.Rows.Count; i++)
{
    <p class="p-3 mb-2 border rounded shadow-sm" style="background-color:#ffffff; color:#212529;">
        Exam title: @Model.Examtitles[i]
    </p>

    <p class="p-3 mb-2 border rounded shadow-sm" style="background-color:#f8f9fa; color:#495057;">
        Rating: @Model.submission.Rows[i]["Rating"]
    </p>

    <p class="p-3 mb-4 border rounded shadow-sm" style="background-color:#f8f9fa; color:#6c757d;">
        Sheikh Email: @Model.submission.Rows[i]["Sh_Email"]
    </p>
}