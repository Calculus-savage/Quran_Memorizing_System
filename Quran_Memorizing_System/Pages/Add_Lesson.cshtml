@page
@model Quran_Memorizing_System.Pages.Add_LessonModel
@{
}

@section Styles {
        <link rel="stylesheet" href="~/css/lessons.css" asp-append-version="true" />
}

<div class="container pt-4">

    <div class="mb-4 d-flex justify-content-between align-items-center">
        <h4 class="fw-bold">Add Lesson</h4>
        <a asp-page="/LessonsSearch" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>

    <form method="post" class="lessons-form">
        <div class="mb-3">
            <label class="form-label fw-semibold">Instructor</label>
            <input asp-for="Instructor" class="form-control" placeholder="Enter instructor name" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Lesson Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter lesson title" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Tags</label>
            <input asp-for="TagsString" class="form-control" placeholder="Enter tags separated by commas" />
            <small class="text-muted">Example: Tag1, Tag2</small>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-plus-circle me-1"></i> Add Lesson
            </button>
        </div>
    </form>
</div>