@page
@model Quran_Memorizing_System.Pages.Add_LessonModel
@{
}

@section Styles {
        <link rel="stylesheet" href="~/css/lessons.css" asp-append-version="true" />
}

<div class="container row pt-3">

    <div class="col-lg-8">

        <form method="post">
            <div class="lesson-card">

                <div class="lesson-title mb-3">Add New Lesson</div>

                <div class="mb-3">
                    <label class="lesson-label">Title</label>
                    <input type="text" name="Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="lesson-label">Location</label>
                    <input type="text" name="Location" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="lesson-label">Availability</label>
                    <input type="text" name="Availability" class="form-control" required />
                </div>

                <div class="mb-4">
                    <label class="lesson-label">Lesson URL</label>
                    <input type="url" name="lesson_url" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-success watch-btn">
                    Add Lesson
                </button>

                <a href="/LessonsSearch" class="btn btn-outline-secondary watch-btn ms-2">
                    Cancel
                </a>

            </div>
        </form>

    </div>

</div>